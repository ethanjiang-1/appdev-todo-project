<h1> Your Groups </h1>

<ul>
  <% @groups.each do |group| %>
    <li><a href="<%= group_path(group) %>"><%= group.name %></a></li>
  <% end %>
  <% if @groups.empty? %>
    <li style="color: #888;">You are not a member of any groups.</li>
  <% end %>
</ul>

<div style="margin-top: 10px;">
  <%= link_to 'Create New Group', "/groups/new", style: "color: white; background-color: #007bff; padding: 8px 16px; border-radius: 8px; text-decoration: none; display: inline-block;" %>
</div>
