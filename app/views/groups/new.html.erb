<h1>Add a New Group</h1>

<form action="/create_group" method="post">
  <div>
    <label for="group_name">Group Name:</label>
    <input type="text" id="group_name" name="query_name" required>
  </div>

  <div>
    <label for="group_descrip">Description:</label>
    <textarea id="group_descrip" name="query_description" rows="3"></textarea>
  </div>

  <input type="hidden" id="group_creator" name="query_creator" value="<%= current_user.id %>">

  <button type="submit">Create Group</button>
</form>
<div>
  <%= link_to 'Cancel', "/groups/", class: 'btn btn-secondary' %>
</div>
