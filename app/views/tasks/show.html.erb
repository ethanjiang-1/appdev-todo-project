<h1> <%= @task.title %> </h1>

<hr>

<h2> Due Date: <%= @task.due_date&.strftime('%Y-%m-%d') %> </h2>
<h3> Assigned To: </h3>
<p>
  <% if @task.listable_type == 'User' %>
    <%= @task.listable.first_name %> <%= @task.listable.last_name %>
  <% else %>
    <%= link_to @task.listable.name, group_path(@task.listable) %>
  <% end %>
</p>
<h3> Description: </h3>
<p> <%= @task.notes %> </p>

<hr>

<div style="margin-top: 10px;">
  <%= link_to 'Edit Task', edit_task_path(@task), style: "color: white; background-color: #007bff; padding: 8px 16px; border-radius: 8px; text-decoration: none; display: inline-block;" %>
</div>
<div>
  &nbsp;
</div>
<div>
  <%= link_to 'Delete Task', "/delete_task/", style: "color: white; background-color: red; padding: 8px 16px; border-radius: 8px; text-decoration: none; display: inline-block;" %>
</div>
